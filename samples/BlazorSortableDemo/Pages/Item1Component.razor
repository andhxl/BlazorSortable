<div class="@Class">
    <div class="my-handle">⋮⋮</div>
    <div class="item-content">
        <div class="item-name">@($"{Item.Name} ({Item.Id})")</div>
        <div class="item-type">@Item.Type</div>
    </div>
</div>

<style>
    .item_ {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 8px;
        margin: 4px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .ignore {
        background-color: red;
    }

    .my-handle {
        cursor: grab;
        color: #999;
        font-size: 1.2em;
        padding: 0 4px;
    }

    .my-handle:active {
        cursor: grabbing;
    }

    .item-content {
        flex: 1;
    }

    .item-name {
        font-weight: 500;
    }

    .item-type {
        font-size: 0.8em;
        color: #666;
        margin-top: 4px;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public Item1 Item { get; set; } = default!;

    [Parameter]
    public string Class { get; set; } = "item_";
}
