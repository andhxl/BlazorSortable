<ExampleComponent Id="@Id"
                  Title="Example"
                  CodeContent="@codeContent">
    <RadzenStack Orientation="Orientation.Horizontal">
        <Sortable TItem="ClassA"
                  Items="Utils.CreateItemList<ClassA>(5)"
                  Class="items-column"
                  Pull="SortablePullMode.Clone"
                  CloneFunction="i => new() { Value = i.Value }"
                  Sort="false">
            <RadzenCard class="item">
                @context
            </RadzenCard>
        </Sortable>

        <Sortable TItem="ClassB"
                  Items="Utils.CreateItemList<ClassB>(5, 6)"
                  Class="items-column"
                  Put="SortablePutMode.Function"
                  PutFunction="c => c.Item is ClassA i && i.Value < 4"
                  ConvertFunction="c => c.Item is ClassA i ? new() { Value = i.Value } : null"
                  InvertSwap="true">
            <RadzenCard class="item">
                @context
            </RadzenCard>
        </Sortable>
    </RadzenStack>
</ExampleComponent>

