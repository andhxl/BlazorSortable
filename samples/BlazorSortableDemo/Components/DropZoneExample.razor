<ExampleComponent Id="@Id"
                  Title="Drop zone"
                  CodeContent="@codeContent">
    <RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal">
            <Sortable TItem="ClassA"
                      Items="Utils.CreateItemList<ClassA>(5)"
                      Class="items-column"
                      Group="drop1">
                <RadzenCard class="item">
                    @context
                </RadzenCard>
            </Sortable>

            <Sortable TItem="ClassB"
                      Items="Utils.CreateItemList<ClassB>(5)"
                      Class="items-column"
                      Group="drop2">
                <RadzenCard class="item">
                    @context
                </RadzenCard>
            </Sortable>
        </RadzenStack>

        <Sortable TItem="object"
                  Class="drop-zone"
                  Put="SortablePutMode.Groups"
                  PutGroups="@(["drop1", "drop2"])"
                  GhostClass="drop-zone-ghost" />
    </RadzenStack>
</ExampleComponent>

