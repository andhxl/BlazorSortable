<ExampleComponent Id="@Id"
                  Title="Simple list"
                  CodeContent="@codeContent">
    <Sortable TItem="ClassA"
              Items="Utils.CreateItemList<ClassA>(5)"
              Class="items-column"
              Delay="150"
              DelayOnTouchOnly="true"
              FallbackOnBody="true">
        <RadzenCard class="item">
            @context
        </RadzenCard>
    </Sortable>
</ExampleComponent>

@code {
    [Parameter, EditorRequired]
    public string Id { get; set; }

    private string codeContent = @"
<Sortable TItem=""ClassA""
          Items=""Utils.CreateItemList<ClassA>(5)""
          Class=""items-column""
          Delay=""150""
          DelayOnTouchOnly=""true""
          FallbackOnBody=""true"">
    <RadzenCard class=""item"">
        @context
    </RadzenCard>
</Sortable>";
}
