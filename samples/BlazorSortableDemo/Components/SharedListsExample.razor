<ExampleComponent Title="Shared lists" CodeContent="@codeContent">
    <RadzenStack Orientation="Orientation.Horizontal">
        <Sortable TItem="ClassA"
                  Items="Utils.CreateItemList<ClassA>(5)"
                  Class="items-column"
                  Group="group1">
            <RadzenCard class="item">
                @context
            </RadzenCard>
        </Sortable>

        <Sortable TItem="ClassA"
                  Items="Utils.CreateItemList<ClassA>(5, 6)"
                  Class="items-column"
                  Group="group1">
            <RadzenCard class="item">
                @context
            </RadzenCard>
        </Sortable>

        <Sortable TItem="ClassA"
                  Items="Utils.CreateItemList<ClassA>(5, 11)"
                  Class="items-column"
                  Group="group1">
            <RadzenCard class="item">
                @context
            </RadzenCard>
        </Sortable>
    </RadzenStack>
</ExampleComponent>

